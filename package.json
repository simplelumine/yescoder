{
  "name": "yescode-statusbar",
  "displayName": "YesCode StatusBar",
  "publisher": "simplelumine",
  "description": "Display YesCode subscription balance in VS Code status bar",
  "version": "0.3.0",
  "license": "MIT",
  "icon": "logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/simplelumine/yescode-statusbar.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "yescode.showMenu",
        "title": "YesCode: Show Menu"
      },
      {
        "command": "yescode.setApiKey",
        "title": "YesCode: Set API Key"
      },
      {
        "command": "yescode.refreshBalance",
        "title": "YesCode: Refresh Balance"
      },
      {
        "command": "yescode.switchDisplayMode",
        "title": "YesCode: Switch Display Mode"
      },
      {
        "command": "yescode.switchVendor",
        "title": "YesCode: Switch Vendor"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "typescript": "^5.7.0"
  }
}